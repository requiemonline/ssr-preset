{
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/requiemonline/<package-name>"
  },
  "author": "requiemonline",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build:client && yarn run build:server && yarn run open:server && yarn run nodemon",
    "nodemon": "nodemon --watch dist --ext js,gz --exec node dist/server/server.js",
    "open:client": "start http://localhost:8080",
    "open:server": "start http://localhost:3001",
    "build:client": "set NODE_ENV=production&& set TARGET_ENV=client&& webpack --config webpack.client.prod.js",
    "build:server": "set NODE_ENV=production&& set TARGET_ENV=server&& webpack --config webpack.server.js",
    "watch:server": "yarn run build:server --watch",
    "watch:client": "yarn run build:client --watch",
    "dev:server": "npm-run-all --parallel open:server watch:server nodemon ",
    "dev:client": "set NODE_ENV=development&& set TARGET_ENV=dev&& yarn run open:client && webpack-dev-server --config webpack.client.dev.js",
    "dev": "npm-run-all --parallel open:server watch:* nodemon",
    "ts": "tsc -w",
    "lint": "eslint ./**/*",
    "fix": "eslint ./**/* --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@emotion/babel-preset-css-prop": "^10.0.14",
    "@hot-loader/react-dom": "^16.8.6",
    "@types/express": "^4.17.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.7.0",
    "lint-staged": "^9.0.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.12.5",
    "terser-webpack-plugin": "^1.3.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.3",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "peerDependencies": {},
  "dependencies": {
    "@emotion/core": "^10.0.14",
    "@react-spring/web": "^9.0.0-beta.31",
    "core-js": "^3.1.4",
    "express": "^4.17.1",
    "express-static-gzip": "^1.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
